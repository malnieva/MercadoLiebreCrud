<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<link rel="stylesheet" href="/css/styles.css">

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

    <!-- MAIN -->
    <main class="forms__container">
        <form class="box__forms" action="/" method="get">
            <!-- datos persona -->
            <fieldset class="data__persona">
                <legend>Datos personales:</legend>
                <input type="text" name="name" id="name" placeholder="Nombre y Apellido" required>
                <input type="text" name="username" id="username" placeholder="Nombre de usuario" required>
                <input type="email" name="email" id="email" placeholder="Email" required>
                <label for="birth">Fecha de nacimiento:</label>
                <input type="date" name="birth" id="birth" value="fecha-de-nacimiento" required>
                <input type="text" name="address" id="address" placeholder="Domicilio" required>
            </fieldset>
            <!-- tipo de usuario -->
            <fieldset id="data__user">
                <legend>Perfil de usuario:</legend>
                <input type="radio" name="options" value="comprador">
                <label for="text">Comprador</label>
                <input type="radio" name="options" value="vendedor">
                <label for="text">Vendedor</label>
            </fieldset>
            <!-- datos de interes -->
            <fieldset id="data__interests">
                <legend>Categorias de Interes:</legend>
                <article>
                    <input type="checkbox" name="electro" id="electro" value="electro">
                    <label for="text">Electro</label>
                </article>
                <article>
                    <input type="checkbox" name="moda" id="moda" value="moda">
                    <label for="text">Moda</label>
                </article>
                <article>
                    <input type="checkbox" name="hogar" id="hogar" value="hogar">
                    <label for="text">Hogar</label>
                </article>
                <article>
                    <input type="checkbox" name="jugueteria" id="jugueteria" value="jugueteria">
                    <label for="text">Juguetería</label>
                </article>
                <article>
                    <input type="checkbox" name="vida-sana" id="vida-sana" value="vida-sana">
                    <label for="text">Vida Sana</label>
                </article>
            </fieldset>
            <!-- foto de usuario -->
            <fieldset>
                <legend>Foto de usuario:</legend>
                <input type="file" name="photo-username" id="photo-username">
            </fieldset>
            <!-- contraseña-->
            <fieldset id="password">
                <legend>Contraseña</legend>
                <input type="password" id="password" name="password1">
                <label for="text">Confirmar contraseña</label>
                <input type="password" id="passwordConfirmation" name="password2">
            </fieldset>
            <!-- botones -->
            <section class="card__btn">
                <a href="/">
                    <button type="submit" class="buy-now-button">Enviar</button>
                </a>
                <button id="reset" type="reset" class="buy-now-button">Borrar</button>
            </section>
        </form>
    </main>
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>